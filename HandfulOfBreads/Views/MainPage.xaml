<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HandfulOfBreads.Views.MainPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ScrollView Orientation="Horizontal" Grid.Row="0" Grid.ColumnSpan="2" BackgroundColor="LightGray" Padding="5" HorizontalScrollBarVisibility="Never">
            <HorizontalStackLayout Spacing="10">
                <Button Text="☰" 
                        Clicked="OnToggleClicked"/>
                <Button Text="New"/>
                <Button Text="Save" />
                <Button Text="Preview" />
                <Button Text="Picture" />
                <Button Text="Undo" />
                <Button Text="Pattern Properties" />
            </HorizontalStackLayout>
        </ScrollView>

        <VerticalStackLayout x:Name="SidePanel"
                             Grid.Row="1"
                             Grid.Column="0"
                             BackgroundColor="LightGray"
                             Padding="5"
                             Spacing="10"
                             WidthRequest="0">
            <Button Text="+"
                    Clicked="OnZoomChanged"/>
            <Button Text="-"
                    Clicked="OnZoomChanged"/>
        </VerticalStackLayout>

        <ScrollView x:Name="CanvasScroll" Orientation="Both" Grid.Row="1" Grid.Column="1" HorizontalScrollBarVisibility="Never" VerticalScrollBarVisibility="Never">
            <Grid x:Name="PixelCanvasContainer">
                <Grid x:Name="PixelCanvas">
                    
                </Grid>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>
