<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HandfulOfBreads.Views.StartPage">
    <AbsoluteLayout BackgroundColor="SlateGray">
        <ScrollView AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="SizeProportional">
            <FlexLayout x:Name="ImagesFlexLayout" Wrap="Wrap" JustifyContent="SpaceAround" AlignItems="Start" AlignContent="Start" Padding="10"/>
        </ScrollView>

        <Button Text="+"
                AbsoluteLayout.LayoutBounds="1, 1, 60, 60"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                CornerRadius="30"
                Command="{Binding AddImageCommand}"/>
    </AbsoluteLayout>
</ContentPage>