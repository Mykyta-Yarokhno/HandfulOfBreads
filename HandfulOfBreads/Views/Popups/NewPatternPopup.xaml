<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="HandfulOfBreads.Views.Popups.NewPatternPopup">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="New Pattern" FontSize="20" HorizontalOptions="Center"/>
        <Button Text="Draw your own design" Clicked="DrawDesign_Clicked" ContentLayout="Left, 20"/>
        <Button Text="Convert a photo" Clicked="ConvertPhoto_Clicked"  ContentLayout="Left, 20"/>
        <Button Text="Import a file" Clicked="ImportFile_Clicked"  ContentLayout="Left, 20" IsEnabled="False"/>
    </VerticalStackLayout>
</toolkit:Popup>